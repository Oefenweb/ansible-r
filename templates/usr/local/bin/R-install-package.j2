#!/usr/bin/env r

if (is.null(argv) | length(argv) < 1) {
  cat("Usage: R-install-package package [lib] [repos]\n");
  q(status = 1);
}

package = argv[1]
type = ifelse(is.na(argv[2])), '{{ default_type }}, argv[4]);
lib = ifelse(is.na(argv[3]), '{{ r_packages_lib }}', argv[2]);

if (!(package %in% installed.packages(lib.loc = lib)[,'Package'])) {
  if (type == "r") {
    repos = ifelse(is.na(argv[4]), '{{ r_packages_repos }}', argv[3]);
    withCallingHandlers(install.packages(package, lib, repos), warning = stop);
  } else if (type == "bioconductor") {
    withCallingHandlers(
      {
        source("{{ bioclite_url }}");
        biocLite(package, lib=lib, suppressUpdates=TRUE, 
          suppressAutoUpdate=TRUE, ask=FALSE);
      }, 
      warning = stop
    )
  } else {
    stop("Type not recognised!\n");
  }
  cat("changed\n");
} else {
  cat("unchanged\n");
}
